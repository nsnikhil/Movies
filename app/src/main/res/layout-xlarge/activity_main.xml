<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexus.nsnik.movies.MainActivity">

    <LinearLayout style="@style/vertcalLinearLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mainActivityToolbar"
            style="@style/toolbar" />

        <android.support.design.widget.TabLayout
            android:id="@+id/mainActivityTabBar"
            style="@style/toolbar" />

        <android.support.v4.view.ViewPager style="@style/viewPager"
            android:id="@+id/mainActivityViewPager"/>
    </LinearLayout>

    <ListView
        android:id="@+id/mainDrawer"
        style="@style/drwaerStyle" />

</android.support.v4.widget.DrawerLayout>
